{{>layout/header}}


<div class="col-md-12 d-flex justify-content-center">
    <div class="col-md-6 mt-3">
        <h2> 게시글 등록 </h2>
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <input type="text" class="form-control" id="author" value="{{loginName}}" disabled>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" rows="7" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="img">※첨부파일은 최대 10mb까지 등록가능합니다</label>
                <br />
                <input type="file" id="img">
            </div>
            <div>
                <input type="text" class="form-control" id="file-name" value="" hidden>
            </div>
        </form>
        <div class="d-flex justify-content-end">
        <a href="/" role="button" class="btn btn-secondary mr-2">취소</a>
        <button type="button" class="btn btn-primary" id="btn-uploadSave">등록</button>
        </div>
        <!--        <button type="button" class="btn btn-primary" id="btn-save">등록</button>-->
    </div>
</div>

{{>layout/footer}}